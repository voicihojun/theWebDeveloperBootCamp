<% include ./partials/header %>


<div class="ui main text container">
	<div class="ui huge container">
		<h1>RESTful Blog App</h1>
	</div>
	<div class="ui top attached segment">
		<div class="ui devided item">
			<% blogs.forEach(function(blog) { %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>" alt="post image" />
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
						<div class="meta">
							<span><%= blog.created.toDateString() %></span>		
						</div>
						<div class="description">
							<p><%= blog.body.substring(0, 100) %>...</p>		
						</div>
						<br />
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
								Read More
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
				<br/>
			<% }) %>
		</div>
	</div>
</div>

<% include ./partials/footer %>